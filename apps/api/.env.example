###############################################
# API Environment Example (.env or .env.local)
###############################################

## Core Database Configuration
# PRIMARY PROD DB (used when NODE_ENV !== development/test)
MONGODB_URI=mongodb://localhost:27017/badminton-club-demo
# Development DB
MONGODB_URI_DEV=mongodb://localhost:27017/badminton-club-demo-dev
# Test DB
MONGODB_URI_TEST=mongodb://localhost:27017/badminton-club-demo-test

## Server Configuration
PORT=3003
NODE_ENV=development

## Security
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRE=7d

## CORS / Frontend Integration
FRONTEND_URL=http://localhost:3000

## Rate Limiting (override defaults if needed)
# 15 minutes default
RATE_LIMIT_WINDOW_MS=900000
# 100 requests per window default
RATE_LIMIT_MAX=100

## Demo Mode Controls
# Enable demo restrictions and hints
DEMO_MODE=true
# Disable new registrations entirely (optional)
DEMO_DISABLE_REGISTER=false
# Cap total user documents (0 = unlimited)
DEMO_MAX_USERS=120

## Optional Email Configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-email-password

## File Upload Configuration
UPLOAD_MAX_SIZE=10mb