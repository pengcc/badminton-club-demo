{
  "name": "badminton-club-app",
  "version": "1.0.0",
  "description": "Badminton club management system",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel --filter \"@club/api\" --filter \"@club/web\" dev",
    "dev:api": "pnpm --filter @club/api dev",
    "dev:web": "pnpm --filter @club/web dev",
    "build": "pnpm --filter @club/shared-types build && pnpm --filter @club/api build && pnpm --filter @club/web build",
    "build:api": "pnpm --filter @club/api build",
    "build:web": "pnpm --filter @club/web build",
    "build:types": "pnpm --filter @club/shared-types build",
    "start:api": "pnpm --filter @club/api start",
    "start:web": "pnpm --filter @club/web start",
    "start": "pnpm -r --parallel --filter \"@club/api\" --filter \"@club/web\" start",
    "lint": "pnpm --filter @club/shared-types lint && pnpm --filter @club/api lint && pnpm --filter @club/web lint",
    "lint:web": "pnpm --filter @club/web lint",
    "format": "prettier --write \"src/**/*.{js,jsx,html,css,scss,md}\"",
    "fix:staged": "git diff --name-only --cached --diff-filter=ACM | grep -E '.(js|jsx|ts|tsx|css|scss|json|md)$' | xargs prettier --write",
    "check": "prettier --check \"src/**/*.{js,jsx,html,css,scss,md}\" --log-level=debug",
    "test": "echo \"Tests to be implemented\"",
    "test:web": "pnpm --filter @club/web test",
    "test:api": "pnpm --filter @club/api test",
    "seed:dev": "pnpm --filter @club/api seed:dev",
    "seed:test": "pnpm --filter @club/api seed:test",
    "seed:prod": "pnpm --filter @club/api seed:prod",
    "db:reset:dev": "pnpm --filter @club/api db:reset:dev",
    "db:reset:test": "pnpm --filter @club/api db:reset:test",
    "db:clear:dev": "pnpm --filter @club/api db:clear:dev",
    "db:clear:test": "pnpm --filter @club/api db:clear:test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --check --ignore-path .prettierignore"
    ],
    "*.{css,scss,json,md,html}": [
      "prettier --check --ignore-path .prettierignore"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
