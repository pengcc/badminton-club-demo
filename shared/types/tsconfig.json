{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["jest"],
    "esModuleInterop": true,
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": []
}